{
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.wordBasedSuggestions": "off",
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.rulers": [120]
  },
  "black-formatter.importStrategy": "useBundled",
  "black-formatter.path": [],
  "python.analysis.diagnosticMode": "workspace", // New setting to control diagnostics scope
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticSeverityOverrides": {},
  "python.globalModuleInstallation": true,
  "python.analysis.autoFormatStrings": false,
  "python.analysis.autoImportCompletions": false,
  "python.analysis.autoIndent": true,
  "python.analysis.autoSearchPaths": true,
  "black-formatter.args": ["--line-length", "120"],
  "python.languageServer": "Pylance",
  "flake8.args": ["--max-line-length=120"],
  "flake8.importStrategy": "useBundled",
  "flake8.ignorePatterns": [],
  "flake8.severity": {
    "convention": "Information",
    "error": "Error",
    "fatal": "Error",
    "refactor": "Hint",
    "warning": "Warning",
    "info": "Information"
  },
  "editor.rulers": [120],
  "makefile.configureOnOpen": false
}
